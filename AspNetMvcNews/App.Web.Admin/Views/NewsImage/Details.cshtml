@model IEnumerable<NewsImage>

@{
	ViewData["Title"] = "Resimler";
}

<table class="table table-striped table-hover">
	<thead>
		<tr>
			<th>
				No
			</th>
			<th>
				@Html.DisplayNameFor(model => model.NewsId)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.ImagePath)
			</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td>
					@Html.DisplayFor(modelItem => item.Id)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.News.Title)
				</td>
				<td>
					<img src="@Html.DisplayFor(modelItem => item.ImagePath)" alt="" height="60" />
				</td>
				<td>
					<a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id">Düzenle</a> |
					<a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Sil</a>
				</td>
			</tr>
		}
	</tbody>
</table>