@model TodayNewsViewModel
<div class="gazette-todays-post section_padding_100_50">
    <div class="gazette-heading">
        <h4>today’s most popular</h4>
    </div>
    @{
        var i = 0;
    }
    @foreach (var item in Model.News)
    {
        
        <div class="gazette-single-todays-post d-md-flex align-items-start mb-50">
            <div class="todays-post-thumb">
                <img src="/NewsTemplate/img/blog-img/2.jpg" alt="">
            </div>
            <div class="todays-post-content">
                <!-- Post Tag -->
                <div class="gazette-post-tag">
                    <a asp-controller="Category" asp-action="Index" asp-route-Id="@Model.Categories[i].Id" >@Model.Categories[i].Name</a>
                </div>
                <h3><a href="#" class="font-pt mb-2">@item.Title</a></h3>
                <span class="gazette-post-date mb-2">@item.CreatedAt.ToString("MMMM dd, yyyy")</span>
                <a href="#" class="post-total-comments">@Model.CommentCount[i] Comments</a>
                <p>@item.Content.Substring(0,25)</p>
            </div>
        </div>
        i++;
    }
