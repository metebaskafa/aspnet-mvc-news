@model IEnumerable<SearchViewModel>
@{
    ViewData["Title"] = "Haber Arama";
}
<!-- Breadcumb Area Start -->
<div class="breadcumb-area section_padding_50">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="breacumb-content d-flex align-items-center justify-content-between">
                    <!-- Post Tag -->
                    <div class="gazette-post-tag">
						<a  >Arama kriterlerinize göre sonuçlar</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Breadcumb Area End -->

<section class="catagory-welcome-post-area section_padding_100">
    <div class="container">
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-12 col-md-4">
                    <!-- Gazette Welcome Post -->
                    <div class="gazette-welcome-post">
                        <!-- Post Tag -->
                        <div class="gazette-post-tag">
                            <a asp-controller="Category" asp-action="Detail" asp-route-id="@item.Category.Id">@item.Category.Name</a>
                        </div>
                        <h2 class="font-pt">@item.News.Title</h2>
                        <p class="gazette-post-date">@item.News.CreatedAt.ToString("MMMM dd, yyyy")</p>
                        <!-- Post Thumbnail -->
                        @if (item.NewsImage is not null)
                        {
                            <div class="blog-post-thumbnail my-5">
                                <img src="@item.NewsImage.ImagePath" alt="post-thumb">
                            </div>
                        }
                        else
                        {
                            <div class="blog-post-thumbnail my-5">
                                <img src="/NewsTemplate/img/blog-img/18.jpg" alt="post-thumb">
                            </div>
                        }
                        
                        <!-- Post Excerpt -->
                        <p>@item.News.Content.Substring(0,100)</p>
                        <!-- Reading More -->
                        <div class="post-continue-reading-share mt-30">
                            <div class="post-continue-btn">
                                <a asp-controller="News" asp-action="Detail" asp-route-id="@item.News.Id" class="font-pt">Continue Reading <i class="fa fa-chevron-right" aria-hidden="true"></i></a>
                            </div>
                        </div>
                    </div>
                </div>
            }
            
            
        </div>

