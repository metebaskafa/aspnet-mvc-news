@model CategoryViewModel
@{
	ViewData["Title"] = Model.Category.Name + " Kategorideki Haberler";
}
<!-- Breadcumb Area Start -->
<div class="breadcumb-area section_padding_50">
	<div class="container">
		<div class="row">
			<div class="col-12">
				<div class="breacumb-content d-flex align-items-center justify-content-between">
					<!-- Post Tag -->
					<div class="gazette-post-tag">
						<a asp-controller="Category" asp-action="Index" asp-route-id="@Model.Category.Id">@Model.Category.Name</a>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
<!-- Breadcumb Area End -->
<partial name="_EditorialSlider" />
<section class="catagory-welcome-post-area section_padding_100">
	<div class="container">
		<div class="row">
			@foreach (var item in Model.News)
			{
				<div class="col-12 col-md-4">
					<!-- Gazette Welcome Post -->
					<div class="gazette-welcome-post">
						<!-- Post Tag -->
						<div class="gazette-post-tag">
							<a asp-controller="Category" asp-action="Index" asp-route-id="@Model.Category.Id">@Model.Category.Name</a>
						</div>
						<h2 class="font-pt">@item.Title</h2>
						<p class="gazette-post-date">@item.CreatedAt.ToString("MMMM dd, yyyy")</p>
						<!-- Post Thumbnail -->
						<div class="blog-post-thumbnail my-5">
							<img src="img/blog-img/18.jpg" alt="post-thumb">
						</div>
						<!-- Post Excerpt -->
						<p>@item.Content.Substring(0,100)</p>
						<!-- Reading More -->
						<div class="post-continue-reading-share mt-30">
							<div class="post-continue-btn">
								<a asp-controller="News" asp-action="Detail" asp-route-id="@item.Id" class="font-pt">Continue Reading <i class="fa fa-chevron-right" aria-hidden="true"></i></a>
							</div>
						</div>
					</div>
				</div>
			}



		</div>

